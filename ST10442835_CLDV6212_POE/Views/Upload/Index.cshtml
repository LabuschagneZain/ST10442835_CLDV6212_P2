@model ST10442835_CLDV6212_POE.Models.FileUploadModel
@{
    ViewData["Title"] = "Upload Document";
}

<style>
    body {
        background-color: #0d0d0d;
        color: #e0e0e0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: #e0e0e0;
        font-weight: 700;
        margin-bottom: 30px;
        letter-spacing: 1px;
    }

    /* Card style */
    .card {
        background-color: #1a1a1a;
        border: 1px solid #444;
        border-radius: 15px;
        box-shadow: 0 6px 12px rgba(0,0,0,0.5);
    }

    .card-header {
        background-color: #0f0f0f;
        color: #a0d8ff; /* subtle light blue */
        font-weight: 600;
        border-bottom: 1px solid #444;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .card-body {
        padding: 25px;
    }

    label {
        color: #a0d8ff;
        font-weight: 600;
    }

    .form-control {
        background-color: #2a2a2a;
        border: 1px solid #444;
        border-radius: 8px;
        color: #e0e0e0;
        padding: 10px;
        transition: 0.3s;
    }

        .form-control:focus {
            background-color: #2a2a2a;
            border-color: #a0d8ff;
            box-shadow: 0 0 8px #a0d8ff;
            color: #fff;
        }

    .btn-red {
        background-color: #1a1a1a;
        color: #a0d8ff;
        border-radius: 8px;
        border: none;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-red:hover {
            background-color: #0f0f0f;
            color: #fff;
        }

    .btn-secondary {
        background-color: #2a2a2a;
        border: 1px solid #444;
        color: #e0e0e0;
        border-radius: 8px;
    }

        .btn-secondary:hover {
            background-color: #444;
            color: #a0d8ff;
        }

    .alert-info {
        background-color: #1a1a1a;
        border: 1px solid #444;
        color: #e0e0e0;
        border-radius: 10px;
        padding: 20px;
    }

        .alert-info h6 {
            color: #a0d8ff;
            font-weight: 600;
            margin-bottom: 10px;
        }

    .form-text {
        color: #ccc;
    }

    i.fas {
        color: #a0d8ff;
    }
</style>

<h2><i class="fas fa-upload"></i> Upload Document</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-file-upload"></i> Submit Proof of Payment</h5>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-4">
                        <label asp-for="ProofOfPayment">Choose File</label>
                        <input asp-for="ProofOfPayment" type="file" class="form-control" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx" />
                        <span asp-validation-for="ProofOfPayment" class="text-danger"></span>
                        <div class="form-text">Accepted formats: PDF, JPG, PNG, DOC, DOCX (Max size: 10MB)</div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="OrderId">Order ID (Optional)</label>
                            <input asp-for="OrderId" class="form-control" placeholder="Enter related order ID" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="CustomerName">Customer Name (Optional)</label>
                            <input asp-for="CustomerName" class="form-control" placeholder="Enter customer name" />
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-red btn-lg me-2">
                            <i class="fas fa-upload"></i> Upload File
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-home"></i> Back to Home
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-4">
            <div class="alert alert-info shadow-sm">
                <h6><i class="fas fa-info-circle"></i> Upload Instructions:</h6>
                <ul class="mb-0">
                    <li>Select your proof of payment document</li>
                    <li>Optionally provide Order ID and Customer Name for reference</li>
                    <li>File will be stored securely in Azure Storage</li>
                    <li>You will receive a confirmation once upload is complete</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('ProofOfPayment').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const fileSize = (file.size / 1024 / 1024).toFixed(2);
                console.log(`Selected file: ${file.name} (${fileSize} MB)`);
            }
        });
    </script>
}
